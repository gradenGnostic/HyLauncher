{
  "name": "hylauncher",
  "version": "2.0.0",
  "description": "HyLauncher - The Lunar Client of Hytale. Launch Hytale with mods, browse Orbis.place, and manage your game experience.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:react\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "dev:react": "react-scripts start",
    "build": "react-scripts build",
    "build:electron": "electron-builder",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [
    "hytale",
    "launcher",
    "mod-manager",
    "orbis",
    "gaming",
    "hylauncher"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "lucide-react": "^0.562.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "sharp": "^0.34.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.hylauncher",
    "productName": "HyLauncher",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "build/**/*",
      "public/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.webp"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.webp"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.webp"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
